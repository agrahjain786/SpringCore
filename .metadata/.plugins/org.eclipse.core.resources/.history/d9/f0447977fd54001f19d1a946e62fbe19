package com.techlabs.app.service;

import java.time.LocalDateTime;

import com.techlabs.app.dto.AccountDTO;
import com.techlabs.app.dto.TransactionDTO;
import com.techlabs.app.dto.UserDTO;
import com.techlabs.app.util.PagedResponse;


public interface AdminService {

	PagedResponse<UserDTO> getAllBlogs(int page, int size, String sortBy, String direction);

	UserDTO getUserById(int userId);

	PagedResponse<UserDTO> getAllUsersByFirstNameStartsWith(int size, int page, String sortBy, String direction, String startWith);

	PagedResponse<TransactionDTO> getAllTransactions(int page, int size, String sortBy, String direction);

	PagedResponse<TransactionDTO> getAllTransactionsBetweenDate(int page, int size, String sortBy, String direction, LocalDateTime startDate, LocalDateTime endDate);

	PagedResponse<TransactionDTO> getAllTransactionsByUserId(int userId, int page, int size, String sortBy,
			String direction);

	UserDTO createUser(UserDTO userDTO);

	UserDTO createUserAccount(AccountDTO accountDTO);
	
	

}
